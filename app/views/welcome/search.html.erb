<%= stylesheet_link_tag 'home' %>

<div class="container">
  <h1 class="text-center">Resultados da Pesquisa</h1>
  
  <%= form_with(url: "/search", method: "get", class: "input-group mb-3 col-12 col-md-6") do %>
    <%= text_field_tag :q, nil, placeholder: "Procurar outro alimento", class: "form-control", 'aria-label': "Procurar um Alimento:", 'aria-describedby': "button-addon2" %>
    <%= button_tag "Pesquisar", class: "btn btn-success", type: "submit", id: "button-addon2" %>
  <% end %>
  <br><br>
 <% if @foods.any? %>
  <ul class="list-group">
    <% @foods.each do |food| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
      
        <div>
          100g de: <%= food.name %>
          <div>Cálorias: <%= food.kcal.to_i %>Kcal</div>
          <div>Proteinas: <%=food.protein.nil? ? 0 : food.protein %>g</div>
          <div>Carboidratos: <%=food.carbohydrates.nil? ? 0 : food.carbohydrates %>g</div>
          <div>Lipidos: <%=food.lipids.nil? ? 0 : food.lipids %>g</div>
        </div>
        <%= link_to "Ver alimento", food, class: "ml-auto btn btn-primary" %>
      </li>
    <% end %>
  </ul>
  <% else %>
  
  <%flash.alert = "Alimento não encontrado"%>
  
   <% end %>
</div>