<%= stylesheet_link_tag 'home' %>


<div class='card mx-auto' style="width: 40rem;">
  <div class='card-header bg-dark text-white text-center'>
    <h1>Alimentos Favoritos</h1>
  </div>

  <div class= 'card-body' >
    <ul class="list-group list-group-flush">
      <% if @foods.blank? %>
        <li class="list-group-item text-center"><%= t('no_fav') %></li>
      <% else %>
        <% @foods.each do |food| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to food.name, food_path(food) %>
            <%= link_to 'Remove from favorites', remove_favorite_food_path(food), method: :delete, data: { confirm: 'Are you sure?' } %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
